{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{ member.username }}
{% endblock %}

{% block body %}

	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_admin') }}">← Retour</a>
	{% else %}
		<a href="{{ path('app_user') }}">← Retour</a>
	{% endif %}

	<div style="max-width: 400px; margin: 40px auto; text-align: center; border: 1px solid #ccc; padding: 20px; border-radius: 15px;">

		<h2>{{ member.username }}</h2>

		<div style="margin-bottom: 20px;">
			{% if member.profileImage %}
				<img src="{{ asset('uploads/profile_images/' ~ member.profileImage) }}" alt="Profile Image" style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover;">
			{% else %}
				<img src="{{ asset('uploads/profile_images/default_image.png') }}" alt="Default Profile Image" style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover;">
			{% endif %}
		</div>

		<div style="text-align: left; padding: 0 20px;">
			<p>
				<strong>Nom d'utilisateur:</strong>
				{{ member.username }}</p>

			<p>
				<strong>Email:</strong>
				{{ member.email }}</p>

			<p>
				<strong>Genre:</strong>
				{{ member.gender | default('Non spécifié') }}</p>

			<p>
				<strong>Rôle:</strong>
				{% if 'ROLE_ADMIN' in member.roles %}
					{{ member.gender == 'female' ? 'Administratrice' : 'Administrateur' }}
				{% else %}
					{{ member.gender == 'female' ? 'Utilisatrice' : 'Utilisateur' }}
				{% endif %}
			</p>

			<p>
				<strong>Leur identifiant :</strong>
				{{ app.user.id }}</p>
		</p>
	</div>
</div>{% endblock %}
