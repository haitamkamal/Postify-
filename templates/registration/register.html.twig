{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1>Register</h1>
	<a href="{{ path('connect_google') }}">
		<img src="{{ asset('uploads/images/google.png') }}" alt="google" title="google" style="width: 40px; height: 40px; border-radius: 20%; cursor:pointer;">
	</a>


	<a href="{{ path('connect_github') }}">
		<img src="{{ asset('uploads/images/github.png') }}" alt="github" title="github" style="width: 40px; height: 40px; border-radius: 20%; cursor:pointer;">
	</a>


	{{ form_errors(registrationForm) }}

	{{ form_start(registrationForm) }}
	{{  form_row(registrationForm.username) }}
	{{ form_row(registrationForm.email) }}
	{{ form_row(registrationForm.gender) }}

	{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="btn">Register</button>
	{{ form_end(registrationForm) }}
{% endblock %}
