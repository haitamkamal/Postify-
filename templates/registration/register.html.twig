{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 p-10 bg-white rounded-2xl shadow-xl">
			<h1 class="text-center text-3xl font-bold text-gray-900">Create your account</h1>

			<div class="flex flex-col gap-4">
				<a href="{{ path('connect_google') }}" class="flex items-center justify-center border rounded-lg px-4 py-2 hover:bg-gray-100 transition">
					<img src="{{ asset('uploads/images/google.png') }}" alt="google" class="w-6 h-6 mr-2">
					<span class="text-sm font-medium text-gray-700">Continue with Google</span>
				</a>

				<a href="{{ path('connect_github') }}" class="flex items-center justify-center border rounded-lg px-4 py-2 hover:bg-gray-100 transition">
					<img src="{{ asset('uploads/images/github.png') }}" alt="github" class="w-6 h-6 mr-2">
					<span class="text-sm font-medium text-gray-700">Continue with GitHub</span>
				</a>
			</div>

			<div class="text-gray-500 text-center text-sm mt-4">or sign up with email</div>

			{{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

			{{ form_row(registrationForm.username, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:outline-none focus:border-indigo-500'}}) }}
			{{ form_row(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:outline-none focus:border-indigo-500'}}) }}
			{{ form_row(registrationForm.gender, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:outline-none focus:border-indigo-500'}}) }}

			{{ form_row(registrationForm.plainPassword, {
				'label': 'Password',
				'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring focus:outline-none focus:border-indigo-500'}
			}) }}

			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition">
				Register
			</button>

			{{ form_end(registrationForm) }}

			{% if registrationForm.vars.errors|length %}
				<div class="text-red-500 text-sm mt-2">
					{{ form_errors(registrationForm) }}
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
